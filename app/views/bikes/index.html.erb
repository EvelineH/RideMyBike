<h1>Bikes#index</h1>
<p>Find me in app/views/bikes/index.html.erb</p>

<h1>My Bikes</h1>

<div class="row">
  <% @bikes.each do |bike| %>
    <div class="card-bike col-12 col-m-6 col-lg-3 col-xl-3">
      <% image = bike.photo.key.to_s %>
      <%= cl_image_tag(image, height: 300, width: 400, crop: :fill) %>
      <div class="card-bike-infos">
        <div>
          <h2> <%= bike.name %> </h2>
          <p> current location:<%= bike.location%> </p>
          <h2 class="card-bike-pricing"> <%= link_to "Edit this bike", edit_bike_path(bike.id), class: "nav-link" %> </h2>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between">
  <h1 class="mb-0">Book your bike in Amsterdam</h3>
  </div>

  <br>


<div class="row">
    <% @bikes.each do |bike| %>
      <%= link_to bike, class: "col-12 col-m-4 col-lg-4 col-xl-3 bike_link" do %>
        <div class="card-bike">
        <div class= p-2>
          <% image = bike.photo.key.to_s %>
            <%= cl_image_tag(image, crop: :fill, style: "height: 300px; width: 100%; object-fit: cover") %>
        </div>
        <div class="card-bike-infos">
          <div>
            <h2><%= bike.name %></h2>
            <p>Bike category:  <%= bike.category.name %></p>
            <p>Adult/Child:  <%= bike.biketype.name %></p>
            <p>Color:  <%= bike.color.name %></p>
          </div>
          <h2 class="card-bike-pricing">â‚¬10/dag</h2>
        </div>
        </div>
      <% end %>
    <% end %>
    </div>
</div>

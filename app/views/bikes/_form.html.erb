
<%= simple_form_for(@bike) do |f| %>
  <%= f.input :name, :label => "Give your bike a name" %>
  <%= f.association :biketype %>
  <%= f.association :category %>
  <%= f.association :color %>
  <%= f.input :location, :label => "Bike's location (Address)"%>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>


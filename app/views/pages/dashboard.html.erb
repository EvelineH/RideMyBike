              <%= image_tag("https://cdn-icons-png.flaticon.com/512/3875/3875172.png", crop: :scale, class: "img-thumbnail")%>
            <% end %>
            <ul class="card-bike-list">
              <%# <li><%= bike.category.name</li>%>
              <%# <li>Suitable for:  <%= bike.biketype.name</li>%>
            </ul>
          </div>
          <div class="card-footer">
            <%= link_to "Edit bike listing", edit_bike_path(bike.id), class: "btn btn-booking btn-card"%>

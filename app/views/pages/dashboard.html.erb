<div class="container text-center container-dashboard">
  <h2><strong>MY</strong> upcoming <strong>RIDES</strong></h2>
  <div class="index-container">
    <div class="cards">
      <% @user_bookings.each do |booking| %>
        <% case booking.status %>
          <% when nil %>
            <% @status = "Pending" %>
            <% @class = "text-warning" %>
          <% when true %>
            <% @status = "Confirmed" %>
            <% @class = "text-danger" %>
          <% when false %>
            <% @status = "Declined" %>
            <% @class = "text-info" %>
          <% end %>

          <div class="card-bike-index">
              <h4 class="card-header">
              <strong>MY RIDE</strong> on <%= booking.owner.first_name %> 's <strong>BIKE</strong>
              </h4>
              <div class="p-2">
                <%= link_to booking.bike, class: "bike_link" do %>
                <% if booking.bike.photo.attached? %>
                  <% image = booking.bike.photo.key %>
                  <%=cl_image_tag(image, crop: :scale, class: "card-image-top")%>
                <% else %>
                  <%= image_tag("https://cdn-icons-png.flaticon.com/512/3875/3875172.png", crop: :scale, class: "card-image-top")%>
                <% end %>
        <% end %>
                <h2>RIDE request</h2>
                <h3 class=<%=@class%>><%=@status%></h3>
                <h5><strong>RIDE</strong> start: <%= booking.start_date.day%> - <%= booking.start_date.month %></h5>
                <h5><strong>RIDE</strong> end: <%= booking.end_date.day%> - <%= booking.end_date.month %></h5>
              </div>
              <div class="card-footer">
                <%= link_to "Booking details", booking_path(booking.id), class: "btn btn-show btn-card btn-block" %>
              </div>
          </div>
      <% end %>
    </div>
  </div>
  <h2>who <i>WANTS TO</i> <strong>RIDE MY BIKE</strong>s</h2>
  <div class="index-container text-center">
    <% if @pending_bookings.empty? %>
      <div class="card-empty container">
        <p class="text-danger"> It seems no one wants to ride your bike at the moment...</p>
      </div>
    <% else %>
      <div class="cards">
        <% @pending_bookings.each do |booking| %>
          <% case booking.status %>
            <% when nil %>
              <% @status = "Pending" %>
              <% @textclass = "text-warning" %>
              <% @cardclass = "card-bike-index pending"%>
            <% when true %>
              <% @status = "Confirmed" %>
              <% @class = "text-danger" %>
              <% @cardclass = "card-bike-index pending"%>
            <% when false %>
              <% @status = "Declined" %>
              <% @class = "text-info" %>
              <% @cardclass = "card-bike-index pending"%>
            <% end %>
          <div class=<%=@cardclass%>>
            <div class="card-header">
              <h5>
                <%= booking.user.first_name%>
                <%= booking.user.last_name %>
                <strong><i>WANTS TO</i> RIDE MY </strong>
                <%= booking.bike.name %>
              </h5>
            </div>
              <h3 class=<%=@textclass%>><%=@status%></h3>
            <div class="p-2">
              <% if booking.bike.photo.attached? %>
                  <% image = booking.bike.photo.key %>
                  <%=cl_image_tag(image, crop: :scale, class: "img-thumbnail card-image-booked-bike", style: "height: 150px; width: 200px")%>
                <% else %>
                  <%= image_tag("https://cdn-icons-png.flaticon.com/512/3875/3875172.png", crop: :scale, class: "img-thumbnail card-image-booked-bike", style: "height: 150px; width: 200px")%>
                <% end %>
              <%# <ul class="card-bike-list"> %>
                <%# <li><%= booking.bike.category.name%>
                <%# <li>Suitable for:  <%= booking.bike.biketype.name%>
              <%# </ul> %>
            </div>
              <%# <div class="btn-block"> %>
                <%= link_to "Accept", booking_path(booking.id, status: true), data: {turbo_method: :patch}, class: "btn btn-warning btn-block btn-card" %>
                <%= link_to "Decline", booking_path(booking.id, status: false), data: {turbo_method: :patch}, class:"btn btn-info btn-card btn-block" %>
              <%# </div> %>
            <div class="card-footer">
              <%= link_to "More about this booking", booking_path(booking.id), class: "bike_link btn btn-flat btn-card btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <h2>who is <strong>RIDE</strong>ing <strong>MY BIKE</strong>s</h2>

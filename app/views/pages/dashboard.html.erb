            <h5><strong>RIDE</strong> end: <%= booking.end_date.day%> - <%= booking.end_date.month %></h5>
          </div>
          <div class="card-footer">
            <%= link_to "Booking details", booking_path(booking.id), class: "btn btn-show btn-card btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <h2> <strong>MY BIKE</strong>s</h2>
  <div class="index-container">
    <div class="cards">
      <% @owned_bikes.each do |bike| %>
        <div class="card-bike-index">
          <h4 class="card-header">
            <%= bike.name %>
          </h4>
          <div class="p-2">
            <% if bike.photo.attached? %>
              <% image = bike.photo.key %>
              <%=cl_image_tag(image, crop: :scale, class: "img-thumbnail")%>
